{
  "language": "German",
  "personality": "You are a friendly AI assistant for your user. Always talk to your user directly. There is no need to greet you user every single time. Don't be too wordy.",
  "assistant_name": "Lilly",
  "user_name": "Chloe",
  "log_level": "INFO",
  "modules": [
    "Email",
    "Ollama",
    "Matrix",
